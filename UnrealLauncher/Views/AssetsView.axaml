<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UnrealLauncher.Views.AssetsView">


    <Grid RowDefinitions="Auto,1,50,1,*">
        <Grid Grid.Row="0" ColumnDefinitions="Auto,Auto,*,Auto,20,Auto" Margin="28,28,28,30">
            <TextBlock Grid.Column="0" Text="Assets" FontSize="28" />
            <Button Classes="AssetsTopPanelButton" Grid.Column="5" Content="Open Folder"
                    Tapped="InputElement_OpenVaultCacheDirectory_OnTapped" />
        </Grid>
        <Border Grid.Row="1" Background="{StaticResource SeparatorColor}" />
        <Border Grid.Row="2" Background="{StaticResource Background2Color}">
            <!-- Under development -->
        </Border>
        <Border Grid.Row="3" Background="{StaticResource SeparatorColor}" />

        <ListBox Grid.Row="4" Classes="ProjectItem" x:Name="AssetsListBox"
                 Background="Transparent" Margin="20">
        </ListBox>
    </Grid>
</UserControl>